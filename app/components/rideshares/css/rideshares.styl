.date {
  font-family: "Times New Roman", Georgia, Serif;
  font-size: 0.9em;
  font-weight: 300;
}

fieldset {
  background-color: #f9f9f9;
}

legend {
  font-size: 1.3em;
  font-weight: 600;
}

label {
  display:block;
}

label.radiobutton {
  display:inline;
}

div.element-padding {
  padding: 0.4em 0 0.4em 0;
}

table > thead {
  text-align: left
}

table.mobile-latest {
  width: 100%
  table-layout: fixed;
  margin-left: 0.2em;
  margin-right: 0.2em;
}

table.mobile-latest td {
  padding-bottom: 0.4em;
  padding-bottom: 0.4em;
}

table.latest tr:nth-child(odd) {
  background: aliceblue;
}

table.latest tr:nth-child(even) {
  background: #f5f5f5;
}